<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="3dp">

    <ImageView
        android:id="@+id/item_img_movie_actor"
        android:layout_width="80dp"
        android:layout_height="150dp"

        android:layout_marginStart="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/item_name_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:justificationMode="inter_word"
        android:text="Name actor"
        android:textColor="#171616"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/item_img_movie_actor"
        app:layout_constraintStart_toStartOf="@+id/item_img_movie_actor"
        app:layout_constraintTop_toBottomOf="@+id/item_img_movie_actor" />


</androidx.constraintlayout.widget.ConstraintLayout>